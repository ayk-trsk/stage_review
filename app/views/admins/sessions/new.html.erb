<div class="container">
  <h5 class='page-title'>管理者ログイン</h5>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 mx-auto">
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <div class="field form-group">
          <%= f.label :email, "メールアドレス", class: "badge" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :password,"パスワード", class: "badge" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "ログイン", class: "btn btn-dark mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
