<div class="top-visual"><%= image_tag('top.jpg') %></div>
<div class="container">
  <h2 class="top-heading">公演を探す</h2>
  <div class="col-md-10 mx-auto">
  <div class="row">
    <div class="col-md-6 pr-3 mt-5">
      <h3 class="section-title">上演中の公演</h3>
      <ul class="list-group">
        <% @stages_now.each do |stage| %>
          <li class="list-group-item"><span class="badge"><%= stage.genre.name %></span></br><%= link_to stage.name, stage_path(stage) %></li>
        <% end %>
      </ul>
      <% if @stages_now.count > 5 %>
        <div class="text-center"><%= link_to 'もっと見る', stages_path(sort: 'now'), class: "btn btn-outline-dark mt-2" %></div>
      <% end %>
    </div>
    <div class="col-md-6 pl-3 mt-5">
      <h3 class="section-title">上演予定の公演</h3>
      <ul class="list-group">
        <% @stages_coming.each do |stage| %>
          <li class="list-group-item"><span class="badge"><%= stage.genre.name %></span></br><%= link_to stage.name, stage_path(stage) %></li>
        <% end %>
      </ul>
      <% if @stages_coming.count > 5 %>
        <div class="text-center"><%= link_to 'もっと見る', stages_path(sort: 'now'), class: "btn btn-outline-dark mt-2" %></div>
      <% end %>
    </div>
    <div class="col-12 my-5">
      <h3 class="section-title">ジャンル</h3>
      <div class="d-flex flex-wrap justify-content-center">
        <% @genres.each do |genre| %>
          <%= link_to genre.name, stages_path(genre_id: genre.id), class: "btn btn-dark btn-sm m-1 p-2" %>
        <% end %>
      </div>
    </div>
    </div>
  </div>


  <h2 class="top-heading">新着レビュー</h2>
  <div class="px-3">
  <div class="col-md-10 mx-auto bg-white mt-5">
    <%= render 'public/reviews/index', reviews: @reviews %>
  </div>
  <div class="mt-3 d-flex justify-content-center">
    <%= link_to "もっと見る", reviews_path, class: "btn btn-outline-dark" %>
  </div>
  </div>
</div>