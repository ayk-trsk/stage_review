<div class="container">
  <h2 class='page-title'>アカウント設定</h2>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
      <%= render 'layouts/errors', obj: @user %>

        <div class="field form-group">
          <%= f.label :email, "メールアドレス", class: "badge" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :password, "新しいパスワード", class: "badge" %> <i>(変更しない場合は空白のままにしてください)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", :placeholder => "#{@minimum_password_length}文字以上", class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation, "確認用パスワード", class: "badge" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "#{@minimum_password_length}文字以上", class: "form-control" %>
        </div>

        <div class="field  form-group">
          <%= f.label :current_password, "現在のパスワード", class: "badge" %><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "更新する", class: 'btn btn-dark mr-4 col-5 col-md-3' %>
          <%= link_to "キャンセル", user_path(resource), class: 'btn btn-dark col-5 col-md-3' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-group text-center mt-5">
    <%= link_to "退会する", quit_user_path(resource), class: 'btn btn-outline-dark btn-sm' %>
  </div>
</div>
