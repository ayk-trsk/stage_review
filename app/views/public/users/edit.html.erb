<div class="container">
  <h2 class='page-title'>プロフィール編集</h2>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <%= render 'layouts/errors', obj: @user %>
      <%= form_with model: @user, url: user_path(@user), local:true do |f| %>
        <div class="form-group">
          <%= f.label :image, "プロフィール画像", class: "badge" %></br>
          <%= f.attachment_field :image, class: "form-control-file" %>
        </div>
         <div class="form-group">
          <%= f.label :name, "ユーザーネーム", class: "badge" %></br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "自己紹介", class: "badge" %></br>
          <%= f.text_area :introduction, :rows => "5", class: "form-control" %>
        </div>
        <div class="form-group text-center mt-4">
          <%= f.submit "更新する", class: 'btn btn-dark mr-4 col-5 col-md-3' %>
          <%= link_to "キャンセル", user_path, class: 'btn btn-dark col-5 col-md-3' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-group text-center mt-5">
    <%= link_to "アカウント設定", edit_user_registration_path, class: 'btn btn-outline-dark' %>
  </div>
</div>
