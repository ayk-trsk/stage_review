<h2>ログイン</h2>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password", :placeholder => "６文字以上" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

  <h3>登録がお済みでない方</h3>
  <p><%= link_to "新規登録", new_user_registration_path %></p>
