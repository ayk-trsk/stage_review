<div class="container">
  <div class="row mt-3 mb-3">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h3 class="text-center">お問い合わせフォーム</h3>
      <%= form_with model:@contact, url: contacts_confirm_path, local: true do |f| %>
        <div class="form-group mt-3">
          <%= f.label :email, 'メールアドレス', class: "badge" %><span class="required"></span></br>
          <%= f.text_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :subject, 'お問い合わせ用件', class: "badge" %><span class="required"></span></br>
          <%= f.text_field :subject, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :message, 'お問い合わせ内容', class: "badge" %><span class="required"></span></br>
          <%= f.text_area :message, size: '10x10', class: 'form-control' %>
        </div>
        <div class="actions text-center">
          <%= f.submit '入力内容確認', class: "btn btn-outline-dark col-4 mt-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>