<div class="container">
  <h2 class='page-title'>公演情報登録</h2>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <%= render 'layouts/errors', obj: @stage %>
      <%= form_with model: @stage, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name, "公演名", class: "badge" %><span class="required"></span>
          <%= f.text_field :name, :placeholder => "公演名", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :genre_id, "ジャンル", class: "badge" %><span class="required"></span><br />
          <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "-- 選択してください --", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :start_date, "公演開始日", class: "badge" %><span class="required"></span><br />
          <%= f.date_field :start_date %>
        </div>
        <div class="form-group">
          <%= f.label :end_date, "公演終了日", class: "badge" %><span class="required"></span><br />
          <%= f.date_field :end_date %>
        </div>
        <div class="form-group">
          <%= f.label :detail, "公演詳細", class: "badge" %>
          <%= f.text_area :detail, :rows => "5", :placeholder => "ここに詳細な内容を記述してください", class: "form-control" %>
        </div>
        <div class="form-group text-center mt-4">
          <%= f.submit "新規登録", class: 'btn btn-dark col-5 col-md-3 mr-3' %>
          <%= link_to "キャンセル", :back, class: 'btn btn-dark col-5 col-md-3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>