<div class="container">
  <% if params[:genre_id] %>
    <h5 class='offset-md-2 page_title my-4'>“<%= @genre.name %>”公演一覧</h5>
  <% else %>
    <h5 class='offset-md-2 page_title my-4'>公演一覧</h5>
  <% end %>
    <% @stages.each do |stage| %>
      <div class="row justify-content-center d-flex flex-column flex-md-row py-3 mb-2 bg-light col-md-10 mx-auto align-items-center">
        <div class="col-md-6 pr-3"><%= link_to stage.name, stage_path(stage) %></div>
        <div class="col-md-3 pr-3"><%= stage.start_date.strftime("%Y年%m月%d日") %><%= stage.end_date.strftime("%Y年%m月%d日") %></div>
        <div class="col-md-3">
          <div id="star-rate-<%= stage.id %>"></div>
          <div class="d-flex align-items-center text-center">
            <div class="rating-score"><%= stage.reviews.average(:rate).to_f.round(1) %></div>
            <%= link_to reviews_path do %>
              <div>全<%= stage.reviews.count %>件</div>
            <% end %>
          </div>
        </div>
      </div>
      <%= render 'layouts/rate_result', stage: stage %>
    <% end %>
  <div class="row">
    <div class="mx-auto d-flex mt-4">
      <%= link_to "公演を新規登録する",new_stage_path, class: "btn btn-dark px-3" %>
    </div>
  </div>
</div>

