<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto mt-5">
      <div class="mt-2">
        <h3><strong><%= @stage.name %></strong></h3>
      </div>
      <div class="mt-3">
        <%= @stage.start_date.strftime("%Y.%m.%d") %>~<%= @stage.end_date.strftime("%Y.%m.%d") %>
        　ジャンル：<%= link_to @stage.genre.name, stages_path(@stage.genre) %>
        　★★★★★
      </div>
      <div class="mt-3">
        <p><%=simple_format(@stage.detail)%></p>
      </div>
      <div class="mt-4">
        <%= link_to "編集する", edit_stage_path(@stage), class: "btn btn-dark col-3 mx-auto d-block" %>
      </div>
    </div>
  </div>
</div>