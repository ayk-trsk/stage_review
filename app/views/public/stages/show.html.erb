<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto mt-5">
      <div class="mt-2">
        <h3><strong><%= @stage.name %></strong></h3>
      </div>
      <div class="mt-3">
        公演期間：<%= @stage.start_date.strftime("%Y年%-m月%-d日") %>〜<%= @stage.end_date.strftime("%Y年%-m月%-d日") %>　/　ジャンル：<%= link_to @stage.genre.name, stages_path(genre_id: @stage.genre.id) %>
      </div>
      <div class="d-flex align-items-center border-bottom">
        <div id="star-rate-<%= @stage.id %>"></div>
        <div class="rating-score"><%= @stage.reviews.average(:rate).to_f.round(1) %></div>
        <%= link_to reviews_path(stage_id: @stage.id) do %>
          <div>全<%= @stage.reviews.count %>件</div>
        <% end %>
      </div>
      <div class="mt-3">
        <p><%=simple_format(@stage.detail)%></p>
      </div>
      <% if user_signed_in? %>
        <div class="mt-4 col text-center">
          <%= link_to new_review_path(stage_id: @stage.id), class: "btn btn-dark" do %>
          <i class="fas fa-pencil-alt"></i> レビューを書く
          <% end %>
        </div>
        <div id="bookmark-btn_<%= @stage.id %>" class="mt-4 col text-center">
          <%= render 'public/bookmarks/bookmark-btn', stage: @stage %>
        </div>
        <div class="mt-4 col text-center">
          <%= link_to "編集する", edit_stage_path(@stage), class: "btn btn-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'public/stages/rate_average', stage: @stage %>