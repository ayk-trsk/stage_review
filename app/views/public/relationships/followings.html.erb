<div class="container">
  <div class="px-5">
    <div class="row">
      <div class="col-md-9 mx-auto mt-5 bg-white p-4">
        <%= render 'public/users/show', user: @user %>
      </div>
    </div>
    <h2 class='page-title'>フォロー中</h2>
    <% if @users.exists? %>
      <div class="row">
        <div class="col-md-9 mx-auto bg-white">
          <%= render 'public/users/index', users: @users %>
        </div>
      </div>
      <div class="mt-3 d-flex justify-content-center"><%= paginate @users %></div>
    <% else %>
      <div class="text-center">フォロー中のユーザーはいません</div>
    <% end %>
  </div>
</div>