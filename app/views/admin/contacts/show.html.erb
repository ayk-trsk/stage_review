<div class="container">
  <h2 class="page-title">お問い合わせ確認フォーム</h2>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <div class="mt-3">
        <label class="badge">メールアドレス</label>
        <p><%= @contact.email %></p>
      </div>
      <div>
        <label class="badge">お問い合わせ用件</label>
        <p><%= @contact.subject %></p>
      </div>
      <div>
        <label class="badge">お問い合わせ内容</label>
        <p><%= @contact.message %></p>
      </div>
      <div class="d-flex mx-auto justify-content-center mt-4">
        <%= link_to "一覧に戻る", admin_contacts_path, class: "btn btn-dark" %>
      </div>
    </div>
  </div>
</div>
