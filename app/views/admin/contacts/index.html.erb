<div class="container">
  <h2 class="page-title">お問い合わせ一覧</h2>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="table-responsive">
        <table class="table bg-white table-hover" style="table-layout:fixed;">
          <thead class="thead-light">
            <tr>
              <th style="width: 200px">メールアドレス</th>
              <th style="width: 300px">用件</th>
            </tr>
          </thead>
          <tbody>
            <% @contacts.each do |contact| %>
            <tr onclick='window.location="<%= '/admin/contacts/' + contact.id.to_s %>"' role="link" class="contact-page">
              <td><%= contact.email %></td>
              <td><%= contact.subject %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="d-flex justify-content-center"><%= paginate(@contacts) %></div>
    </div>
  </div>
</div>