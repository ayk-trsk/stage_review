<div class='container'>
  <h2 class='page-title'>ジャンル一覧・追加</h2>
  <%= render 'layouts/errors', obj: @genre %>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <div class="form-group col-10 mx-auto">
          <%= f.text_field :name, :placeholder => "ジャンル名", class: "form-control" %>
        </div>
        <div class="form-group text-center">
          <%= f.submit "新規登録", class: 'btn btn-dark ml-2' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-4 pt-4 mx-auto">
      <table class="table bg-white">
        <thead class="thead-light">
          <tr>
            <th>ジャンル名</th>
            <th>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-outline-dark" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>