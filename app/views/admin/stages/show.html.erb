<div class="container">
  <div class="row px-3">
    <div class="col-md-8 mx-auto mt-5 bg-white p-4">
      <h4><strong><%= @stage.name %></strong></h4>
      <div class="mt-3">
        <%= @stage.start_date.strftime("%Y年%-m月%-d日") %>〜<%= @stage.end_date.strftime("%Y年%-m月%-d日") %>　<%= link_to @stage.genre.name, admin_stages_path(genre_id: @stage.genre.id), class: "badge" %>
      </div>
      <div class="d-flex align-items-center">
        <div id="star-rate-<%= @stage.id %>"></div>
        <div class="rating-score"><%= @stage.reviews.average(:rate).to_f.round(1) %></div>
        <%= link_to admin_reviews_path(stage_id: @stage.id) do %>
          <div>全<%= @stage.reviews.count %>件</div>
        <% end %>
      </div>
      <div class="mt-3">
        <p><%=simple_format(@stage.detail)%></p>
      </div>
    </div>
  </div>
    <div class="mt-5 text-center">
      <%= link_to "編集する", edit_admin_stage_path(@stage), class: "btn btn-dark px-4 mr-5" %>
      <%= link_to "削除する", admin_stage_path(@stage), method: :delete, class: "btn btn-outline-dark px-4", "data-confirm" => "本当に削除しますか？" %>
    </div>
</div>

<%= render 'public/stages/rate_average', stage: @stage %>
