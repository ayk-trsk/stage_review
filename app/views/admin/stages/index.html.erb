<div class="container">
  <% if params[:genre_id] %>
    <h5 class='offset-md-2 page_title my-4'>“<%= @genre.name %>”公演一覧</h5>
  <% else %>
    <h5 class='offset-md-2 page_title my-4'>公演一覧</h5>
  <% end %>
  <div class="row col-md-10 mx-auto">
    <div class="ml-auto d-flex mb-4">
      <%= link_to "公演を新規登録する",new_admin_stage_path, class: "btn btn-dark px-3" %>
    </div>
  </div>
  <% @stages.each do |stage| %>
      <div class="row justify-content-center d-flex flex-column flex-md-row py-3 mb-2 bg-light col-md-10 mx-auto align-items-center">
        <div class="col-md-6 pr-3"><h6><%= link_to stage.name, admin_stage_path(stage) %></h6></div>
        <div class="col-md-3 pr-3 d-flex flex-md-column">
          <div><%= stage.start_date.strftime("%Y年%-m月%-d日") %></div>
          <div class="ml-md-3">〜<%= stage.end_date.strftime("%Y年%-m月%-d日") %></div>
        </div>
        <div class="col-md-3 d-flex flex-row align-items-center">
          <div id="star-rate-<%= stage.id %>"></div>
          <div class="d-flex align-items-center flex-md-column flex-row">
            <div class="rating-score"><%= stage.reviews.average(:rate).to_f.round(1) %></div>
            <%= link_to reviews_path do %>
              <div class="small">全<%= stage.reviews.count %>件</div>
            <% end %>
          </div>
        </div>
      </div>
    <%= render 'public/stages/rate_average', stage: stage %>
  <% end %>
</div>
