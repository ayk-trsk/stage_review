<div class="container">
  <% if params[:genre_id] %>
    <h2 class='page-title'>“<%= @genre.name %>”公演一覧</h2>
  <% else %>
    <h2 class='page-title'>公演一覧</h2>
  <% end %>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="text-center mb-4">
        <%= link_to "公演を新規登録する",new_admin_stage_path, class: "btn btn-dark px-3" %>
      </div>
      <%= render 'admin/stages/index', stages: @stages %>
    </div>
  </div>
  <div class="mt-3 d-flex justify-content-center"><%= paginate @stages %></div>
</div>
