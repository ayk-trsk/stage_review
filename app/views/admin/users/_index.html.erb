<table class="table bg-white">
  <thead class="thead-light">
    <tr>
      <th>ユーザーID</th>
      <th>ユーザーネーム</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.id%></td>
        <td><%= link_to user.name, admin_user_path(user) %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.is_deleted %>
            <span class="text-muted"><strong>退会</strong></span>
          <% else %>
            <span class="text-success"><strong>有効</strong></span>
          <% end %>
          <%= link_to "編集", edit_admin_user_path(user), class: "btn btn-sm btn-dark ml-2" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>