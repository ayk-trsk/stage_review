<div class="table-responsive">
  <table class="table bg-white" style="table-layout:fixed;">
    <thead class="thead-light">
      <tr>
        <th style="width:160px;">投稿日</th>
        <th style="width:200px;">ユーザーネーム</th>
        <th style="width:400px;">公演名</th>
      </tr>
    </thead>
    <tbody>
      <% reviews.each do |review| %>
        <tr>
          <td><%= link_to review.created_at.strftime("%Y年%-m月%-d日"), admin_review_path(review)%></td>
          <td><%= review.user.name %></td>
          <td><%= review.stage.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>